{
  "compilerOptions": {
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "esnext",
    "types": [
      "node",
      "jest"
    ],
    "useDefineForClassFields": false,
    "baseUrl": "src"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./node_modules/",
    "./build/"
  ],
}
